<?xml version="1.0" encoding="UTF-8"?>
<config version="2" xmlns="http://mediatomb.cc/config/2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://mediatomb.cc/config/2 http://mediatomb.cc/config/2.xsd">
  <server>
    <port>49153</port>
    <interface>br0</interface>
    <ui enabled="yes" show-tooltips="yes" poll-interval="2" poll-when-idle="no">
    <!-- <ui enabled="yes" show-tooltips="yes"> -->
      <accounts enabled="no" session-timeout="30">
        <account user="mediatomb" password="mediatomb"/>
      </accounts>
    </ui>
    <name>KEENETIC MediaTomb Server</name>
    <manufacturerURL>http://mediatomb.cc/</manufacturerURL>
    <modelname>Mediatomb</modelname>
    <modelnumber>0.12.1</modelnumber>
    <udn>uuid:cfdbc7db-f260-4080-a0fe-92523a3ff7fa</udn>
    <!-- <home>/media/DISK_A1/system/root/.mediatomb</home> --><!-- default, first launching -->
    <home>/media/DISK_A1/system/var/mediatomb</home>
    <webroot>/media/DISK_A1/system/usr/share/mediatomb/web</webroot>
    <!-- <servedir>/home/stuff/Filmy</servedir> -->
    <storage caching="no"><!-- yes may call freezinging adding media to database on NAS -->
      <sqlite3 enabled="yes">
        <database-file>mediatomb.db</database-file>
        <synchronous>off</synchronous><!-- default=off | normal | full -->
        <on-error>restore</on-error>
        <backup enabled="no" interval="6000"/><!-- default=no | yes -->
      </sqlite3>
      <mysql enabled="no">
        <host>localhost</host>
        <port>3306</port>
        <socket>/media/DISK_A1/system/tmp/mysql/mysql.sock</socket>
        <database>mediatomb</database>
        <username>mediatomb</username>
        <password>mediatomb</password>
        <!-- If the tag doesn't exist MediaTomb will use no password, if the tag exists, but is empty MediaTomb will use an empty password -->
      </mysql>
    </storage>
    <protocolInfo extend="no"/><!-- For PS3 support change to "yes" -->
    <custom-http-headers>
      <!-- Samsung needs it -->
      <add header="transferMode.dlna.org: Streaming"/>
      <add header="contentFeatures.dlna.org: DLNA.ORG_OP=01;DLNA.ORG_CI=0;DLNA.ORG_FLAGS=01500000000000000000000000000000"/>
    </custom-http-headers>
    <extended-runtime-options>
      <!-- <ffmpegthumbnailer enabled="yes">
         <thumbnail-size>128</thumbnail-size>
         <seek-percentage>5</seek-percentage>
         <filmstrip-overlay>yes</filmstrip-overlay>
         <workaround-bugs>no</workaround-bugs>
      </ffmpegthumbnailer> -->
      <mark-played-items enabled="no" suppress-cds-updates="yes">
        <string mode="prepend">*</string>
        <mark>
          <content>video</content>
        </mark>
      </mark-played-items>
    </extended-runtime-options>
  </server>
  <import hidden-files="no">
    <filesystem-charset>UTF-8</filesystem-charset>
    <metadata-charset>UTF-8</metadata-charset>
    <playlist-charset>UTF-8</playlist-charset>
    <scripting script-charset="UTF-8">
      <common-script>/media/DISK_A1/system/usr/share/mediatomb/js/common.js</common-script>
      <playlist-script create-link="yes">/media/DISK_A1/system/usr/share/mediatomb/js/playlists.js</playlist-script>
      <virtual-layout type="js"><!-- default=builtin | js | disabled -->
        <import-script>/media/DISK_A1/system/usr/share/mediatomb/js/import.js</import-script>
      </virtual-layout>
    </scripting>
    <magic-file>/media/DISK_A1/system/usr/share/misc/magic</magic-file>
    <autoscan use-inotify="auto"><!-- default=auto | yes | no -->
      <!-- <directory location="/media/DISK_A1/my_video" mode="timed" interval="3600" level="basic" recursive="yes" hidden-files="no"/>
      <directory location="/media/DISK_A1/my_audio" mode="timed" interval="3600" level="basic" recursive="yes" hidden-files="no"/> -->
    </autoscan>
    <mappings>
      <extension-mimetype ignore-unknown="no">
        <map from="asf" to="video/x-ms-asf"/>
        <map from="asx" to="video/x-ms-asf"/>
        <!-- <map from="avi" to="video/x-avi"/> -->
        <map from="avi" to="video/x-msvideo"/>
        <map from="flv" to="video/x-flv"/>
        <map from="divx" to="video/x-msvideo"/>
        <map from="mkv" to="video/x-mkv"/>
        <!-- <map from="m2ts" to="video/mpeg"/> -->
        <map from="m2ts" to="video/vnd.dlna.mpeg-tts"/>
        <map from="ts" to="video/mpeg"/>
        <!-- <map from="vob" to="video/x-vob"/> -->
        <map from="vob" to="video/mpeg"/>
        <!-- <map from="wmv" to="video/x-ms-wmv"/> -->
        <map from="wmv" to="video/x-ms-asf"/>
        <map from="wvx" to="video/x-ms-wvx"/>
        <map from="wm" to="video/x-ms-wm"/>
        <map from="wmx" to="video/x-ms-wmx"/>
        <map from="xvid" to="video/x-msvideo"/>
        <map from="jpg" to="image/jpeg"/>
        <map from="bmp" to="image/bmp"/>
        <map from="mp3" to="audio/mpeg"/>
        <map from="ogg" to="application/ogg"/>
        <map from="wma" to="audio/x-ms-wma"/>
        <map from="wax" to="audio/x-ms-wax"/>
        <map from="m3u" to="audio/x-mpegurl"/>
        <map from="pls" to="audio/x-scpls"/>
        <map from="srt" to="smi/caption"/>
      </extension-mimetype>
      <mimetype-upnpclass>
        <map from="audio/*" to="object.item.audioItem.musicTrack"/>
        <map from="video/*" to="object.item.videoItem"/>
        <map from="image/*" to="object.item.imageItem"/>
      </mimetype-upnpclass>
      <mimetype-contenttype>
        <treat mimetype="audio/mpeg" as="mp3"/>
        <treat mimetype="application/ogg" as="ogg"/>
        <treat mimetype="audio/x-flac" as="flac"/>
        <treat mimetype="image/jpeg" as="jpg"/>
        <treat mimetype="audio/x-mpegurl" as="playlist"/>
        <treat mimetype="audio/x-scpls" as="playlist"/>
        <treat mimetype="audio/x-wav" as="pcm"/>
        <treat mimetype="audio/L16" as="pcm"/>
        <treat mimetype="video/x-msvideo" as="avi"/>
        <treat mimetype="video/x-divx" as="avi"/>
        <treat mimetype="video/mp4" as="mp4"/>
        <treat mimetype="video/x-vob" as="avi"/>
        <treat mimetype="video/x-matroska" as="mkv"/>
      </mimetype-contenttype>
    </mappings>
  </import>
  <transcoding enabled="no"/>
</config>
